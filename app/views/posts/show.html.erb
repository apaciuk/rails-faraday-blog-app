<div class="page-header mt-5 mb-2">
  <%= link_to posts_path, class: 'btn btn-default' do %>
    All Posts
  <% end %>
  <%= link_to edit_post_path(@post), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show post</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @post.title %></dd>
  <dt>Content:</dt>
  <dd><%= @post.content %></dd>
  <dt>Img url:</dt>
  <dd><%= @post.img_url %></dd>
  <dt>User:</dt>
  <dd><%= @post.user %></dd>
</dl>
